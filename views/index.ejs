<!-- HOME PAGE FOR THE APP -->

<!DOCTYPE html>
<html lang="en">

<head>
  <title>Quizzy App</title>

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/index.js"></script>


<body>
  <%- include('partials/_header') %>
<form action="/api" method="GET" class="quiz_sort">
  <select name="quiz_sort" id="quiz_sort">
    <option value="" disable selected>Sort Quizzes</option>
    <option value="recent">Recent</option>
    <% if (userName) { %>
    <option value="untaken">Untaken by me</option>
    <% } %>
    <option value="popular">Popular</option>
    <option value="oldest">Oldest</option>
  </select>
</form>

  <main class="quiz_container index_container">
  </main>

</body>

</html>
